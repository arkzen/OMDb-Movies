<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:id="@+id/ivItemMoviePoster"
            android:layout_width="105dp"
            android:layout_height="143dp"
            tools:src="@color/colorPrimary"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActivesName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Bowling at Downtown Alley"
            style="@style/Text.white_14sp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/ivItemMoviePoster"
            app:layout_constraintStart_toStartOf="@id/ivItemMoviePoster"
            app:layout_constraintEnd_toEndOf="@id/ivItemMoviePoster"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>